<?xml version="1.0" encoding="UTF-8"?>
<resources>
    <declare-styleable name="Ellipse">
        <attr name="Fill" format="color"></attr>
       <attr name="Stroke" format="color"></attr>
        <attr name="StrokeWidth" format="float"></attr>
    </declare-styleable>
    <declare-styleable name="Gauge">
        <attr name="FillColor" format="color"></attr>
          <attr name="FillEndColor" format="color"></attr>
        <attr name="StrokeColor" format="color"></attr>
        <attr name="PointColor" format="color"></attr>
        <attr name="OptimalRangeColor" format="color"></attr>
        <attr name="AboveOptimalRangeColor" format="color"></attr>
        <attr name="BelowOptimalRangeColor" format="color"></attr>
        <attr name="DialTextColor" format="color"></attr>
        <attr name="MinorTickColor" format="color"></attr>
        <attr name="MajorTickColor" format="color"></attr>
        
        <attr name="GaugeThickness" format="float"></attr>
        <attr name="MajorDivisionsCount" format="integer"></attr>
        <attr name="MinorDivisionsCount" format="integer"></attr>
        <attr name="CurrentValue" format="float"></attr>
        <attr name="MinValue" format="float"></attr>
        <attr name="MaxValue" format="float"></attr>
        <attr name="OptimalRangeStartValue" format="float"></attr>
        <attr name="OptimalRangeEndValue" format="float"></attr>
        <attr name="ScaleStartAngle" format="float"></attr>
        <attr name="ScaleSweepAngle" format="float"></attr>
        <attr name="DialText" format="reference|string"></attr>
        <attr name="DialUnit" format="reference|string"></attr>
        <attr name="IsLogarithm" format="boolean"></attr>

    </declare-styleable>
    
     <declare-styleable name="GaugeView">
        <attr name="showOuterShadow" format="boolean" />
        <attr name="showOuterBorder" format="boolean" />
        <attr name="showOuterRim" format="boolean" />
        <attr name="showInnerRim" format="boolean" />
        <attr name="showNeedle" format="boolean" />
        <attr name="showScale" format="boolean" />
        <attr name="showRanges" format="boolean" />
        <attr name="showText" format="boolean" />
        
        <attr name="outerShadowWidth" format="float" />
        <attr name="outerBorderWidth" format="float" />
        <attr name="outerRimWidth" format="float" />
        <attr name="innerRimWidth" format="float" />
        <attr name="innerRimBorderWidth" format="float" />
        <attr name="needleWidth" format="float" />
        <attr name="needleHeight" format="float" />
        
        <attr name="scalePosition" format="float" />
        <attr name="scaleStartValue" format="float" />
        <attr name="scaleEndValue" format="float" />
        <attr name="scaleStartAngle" format="float" />
        
        <attr name="divisions" format="integer" />
        <attr name="subdivisions" format="integer" />
        
        <attr name="rangeValues" format="reference" />
        <attr name="rangeColors" format="reference" />
        
        <attr name="textValue" format="string|reference" />
        <attr name="textValueColor" format="color" />
        <attr name="textValueSize" format="float" />
        <attr name="textUnit" format="string|reference" />
        <attr name="textUnitColor" format="color" />
        <attr name="textUnitSize" format="float" />
        <attr name="textShadowColor" format="color" />
       
    </declare-styleable>
    
</resources>